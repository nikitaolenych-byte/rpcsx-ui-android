<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".RPCSXActivity">

    <net.rpcsx.GraphicsFrame
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <net.rpcsx.overlay.PadOverlay
        android:id="@+id/padOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- RSX Graphics Engine Control Button -->
    <ImageButton
        android:id="@+id/rsx_toggle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/rsx_button_bg"
        android:padding="8dp"
        android:src="@drawable/ic_rsx_engine"
        android:contentDescription="Toggle RSX Graphics Engine"
        app:tint="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="60dp" />

    <!-- RSX Status Indicator -->
    <TextView
        android:id="@+id/rsx_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSX: OFF"
        android:textColor="#80FFFFFF"
        android:textSize="10sp"
        android:background="#40000000"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@id/rsx_toggle"
        app:layout_constraintStart_toStartOf="@id/rsx_toggle"
        app:layout_constraintEnd_toEndOf="@id/rsx_toggle"
        android:layout_marginBottom="4dp" />

    <!-- FPS Counter -->
    <TextView
        android:id="@+id/fps_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPS: --"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:background="#40000000"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:id="@+id/osc_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/actionBarItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_show_osc"
        app:tint="#40FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />
    
</androidx.constraintlayout.widget.ConstraintLayout>
